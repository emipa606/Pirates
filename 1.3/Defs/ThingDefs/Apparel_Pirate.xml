      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,1,1)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>RGBA(1,1,0.65,1)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>RGBA(0.4,0.6,0.6,1)</min>
          <max>RGBA(1,1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>
</Defs>
